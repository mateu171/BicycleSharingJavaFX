<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="500" prefWidth="400"
  style="-fx-background-color: #FEFDFF; -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: gray; -fx-border-width: 1;"
  xmlns="http://javafx.com/javafx/25"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="org.example.bicyclesharing.controller.LoginController">

  <children>
    <VBox alignment="CENTER" spacing="5" fillWidth="false">

      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Авторизація" />

      <VBox alignment="CENTER" spacing="2">
        <StackPane>
          <TextField fx:id="loginField" prefWidth="250" promptText="Login"
            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: gray; -fx-border-width: 1; -fx-padding: 0 0 0 20;" />
          <ImageView fitHeight="15" fitWidth="15" preserveRatio="true"
            style="-fx-translate-x: -115;">
            <image>
              <Image url="@../art/icon/user.png"/>
            </image>
          </ImageView>
        </StackPane>
        <Label fx:id="loginErrorLabel"
          maxWidth="250"
          style="-fx-font-size: 11px;"
          textFill="red"
          wrapText="true"/>
      </VBox>

      <VBox alignment="CENTER" spacing="2">
        <StackPane>
          <TextField fx:id="passwordField" prefWidth="250" promptText="Password"
            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: gray; -fx-border-width: 1; -fx-padding: 0 0 0 20;" />
          <ImageView fitHeight="15" fitWidth="15" preserveRatio="true"
            style="-fx-translate-x: -115;">
            <image>
              <Image url="@../art/icon/key.png"/>
            </image>
          </ImageView>
        </StackPane>
      </VBox>

      <Label fx:id="errorMessage"
        maxWidth="250"
        style="-fx-font-size: 12px; -fx-font-weight: bold;"
        textFill="red"
        wrapText="true"/>

      <HBox alignment="CENTER">
        <Button prefHeight="25.0" prefWidth="150.0"
          fx:id="registerButton"
          style="-fx-background-color: transparent; -fx-text-fill: #364153;"
          text="Ще не маю аккаунт"
          onAction="#openRegisterWindow"/>
      </HBox>

      <Button fx:id="loginButton"
        prefHeight="25.0"
        prefWidth="100.0"
        style="-fx-background-color: #FFE600; -fx-background-radius: 10;"
        text="Ввійти"
        onAction="#onLogin"/>

    </VBox>
  </children>
</StackPane>