<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.AnchorPane?>
<StackPane prefHeight="500" prefWidth="400"
  styleClass="stack-pane-root"
  stylesheets="@../css/style.css"
  xmlns="http://javafx.com/javafx/25"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="org.example.bicyclesharing.controller.StartController">

  <AnchorPane prefHeight="500" prefWidth="400" >
    <HBox fx:id="titleBar" spacing="5"
      AnchorPane.topAnchor="0"
        AnchorPane.rightAnchor="10">
      <Button fx:id="minimizeButton" onAction="#minimizeWindow" styleClass="title-button" text="—" />
      <Button fx:id="closeButton" onAction="#closeWindow" styleClass="title-button" text="✕" />
    </HBox>

    <StackPane fx:id="contentPane" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"/>
  </AnchorPane>
</StackPane>
